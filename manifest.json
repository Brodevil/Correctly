{
  "manifest_version": 3,
  "name": "Smart Form Assistant",
  "version": "1.0.0",
  "description": "Auto-answers Google Forms MCQs by comparing ChatGPT and Gemini responses",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://docs.google.com/forms/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "generated-icon.png",
      "48": "generated-icon.png",
      "128": "generated-icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "generated-icon.png",
    "48": "generated-icon.png",
    "128": "generated-icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["onboarding.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
